@model LabAssistanteProject.Models.Users
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Admin Provisioning | LabAssistant</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <style>
        body {
            background: #0f172a;
            display: flex;
            align-items: center;
            min-height: 100vh;
            font-family: 'Inter', sans-serif;
        }

        .admin-card {
            background: white;
            border-radius: 20px;
            padding: 2.5rem;
            width: 100%;
            max-width: 450px;
            margin: auto;
        }

        .btn-dark {
            background: #0f172a;
            border: none;
            padding: 0.8rem;
        }
    </style>
</head>
<body>
    <div class="admin-card shadow-lg">
        <div class="text-center mb-4">
            <div class="bg-danger text-white d-inline-block p-3 rounded-circle mb-3">
                <i class="bi bi-shield-lock-fill fs-3"></i>
            </div>
            <h3 class="fw-bold">Admin Registration</h3>
            <p class="text-muted small">Authorization required to create administrative accounts</p>
        </div>

        <form asp-action="AdminRegister" method="post">
            <div class="mb-3">
                <label class="form-label fw-bold small">Admin Secret Key</label>
                <input type="password" name="SecretKey" class="form-control" placeholder="Enter System Secret" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold small">Username</label>
                <input asp-for="Username" class="form-control" placeholder="admin_user" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold small">Email</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="admin@lab.com" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold small">Password</label>
                <input asp-for="Password" type="password" class="form-control" required />
            </div>

            <div class="mb-4">
                <label class="form-label fw-bold small">Assign High Role</label>
                <select asp-for="Role" class="form-select">
                    <option value="admin">Super Administrator</option>
                    <option value="facility_head">Facility Head</option>
                    <option value="assignee">Assignee / Technician</option>
                </select>
            </div>

            <button type="submit" class="btn btn-dark w-100 fw-bold">Verify & Create Account</button>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger mt-3 small text-center">@TempData["Error"]</div>
            }
        </form>
    </div>
</body>
</html>