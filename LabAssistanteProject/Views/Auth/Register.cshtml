@model LabAssistanteProject.Models.Users

@{
    Layout = null; // Clean look ke liye layout bypass kiya hai Update Register
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Account | LabAssistant</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <style>
        :root {
            --primary: #4361ee;
            --primary-hover: #3a0ca3;
            --bg-gradient: linear-gradient(135deg, #f8f9fc 0%, #e2e8f0 100%);
        }

        body {
            background: var(--bg-gradient);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Inter', sans-serif;
            padding: 2rem 0;
        }

        .register-card {
            background: white;
            border: none;
            border-radius: 24px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.05);
            padding: 2.5rem;
            width: 100%;
            max-width: 500px;
        }

        .brand-logo {
            width: 50px;
            height: 50px;
            background: var(--primary);
            color: white;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin: 0 auto 1.2rem;
            box-shadow: 0 8px 16px rgba(67, 97, 238, 0.3);
        }

        .form-label {
            font-weight: 600;
            color: #475569;
            font-size: 0.85rem;
            margin-bottom: 0.4rem;
        }

        .input-group-text {
            background-color: #f8fafc;
            border-color: #e2e8f0;
            color: #94a3b8;
        }

        .form-control, .form-select {
            border-color: #e2e8f0;
            padding: 0.65rem 1rem;
            font-size: 0.9rem;
            border-radius: 10px;
        }

            .form-control:focus, .form-select:focus {
                border-color: var(--primary);
                box-shadow: 0 0 0 4px rgba(67, 97, 238, 0.1);
            }

        .btn-primary {
            background-color: var(--primary);
            border: none;
            padding: 0.8rem;
            font-weight: 700;
            border-radius: 12px;
            margin-top: 1rem;
        }

        .login-link {
            color: var(--primary);
            font-weight: 700;
            text-decoration: none;
        }
    </style>
</head>
<body>

    <div class="container d-flex justify-content-center px-3">
        <div class="register-card">
            <div class="brand-logo">
                <i class="bi bi-person-plus-fill"></i>
            </div>

            <div class="text-center mb-4">
                <h2 class="fw-bold text-dark mb-1">Create Account</h2>
                <p class="text-muted small">Join our facility management system</p>
            </div>

            <form asp-action="Register" method="post">
                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label class="form-label">Username</label>
                        <div class="input-group">
                            <span class="input-group-text border-end-0 rounded-start-3">
                                <i class="bi bi-at"></i>
                            </span>
                            <input asp-for="Username" class="form-control border-start-0 rounded-end-3" placeholder="johndoe" required />
                        </div>
                    </div>

                    <div class="col-md-12 mb-3">
                        <label class="form-label">Full Name</label>
                        <div class="input-group">
                            <span class="input-group-text border-end-0 rounded-start-3">
                                <i class="bi bi-person"></i>
                            </span>
                            <input asp-for="FullName" class="form-control border-start-0 rounded-end-3" placeholder="John Doe" required />
                        </div>
                    </div>

                    <div class="col-md-12 mb-3">
                        <label class="form-label">Email Address</label>
                        <div class="input-group">
                            <span class="input-group-text border-end-0 rounded-start-3">
                                <i class="bi bi-envelope"></i>
                            </span>
                            <input asp-for="Email" type="email" class="form-control border-start-0 rounded-end-3" placeholder="john@example.com" required />
                        </div>
                    </div>

                    <div class="col-md-12 mb-3">
                        <label class="form-label">Password</label>
                        <div class="input-group">
                            <span class="input-group-text border-end-0 rounded-start-3">
                                <i class="bi bi-key"></i>
                            </span>
                            <input asp-for="Password" type="password" id="passwordInput" class="form-control border-start-0 border-end-0" placeholder="••••••••" required />
                            <button type="button" id="togglePassword" class="input-group-text bg-white border-start-0 rounded-end-3">
                                <i class="bi bi-eye-slash"></i>
                            </button>
                        </div>
                    </div>

                    <div class="col-md-12 mb-4">
                        <label class="form-label">System Role</label>
                        <select asp-for="Role" class="form-select rounded-3">
                            <option value="enduser" selected>End User (Staff/Student)</option>
                            <option value="facility_head">Facility Head</option>
                            <option value="assignee">Assignee (Technician)</option>
                            <option value="admin">Administrator</option>
                        </select>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100 shadow-sm">
                    Register Account <i class="bi bi-check2-circle ms-2"></i>
                </button>

                @if (ViewData.ModelState.Values.Any(v => v.Errors.Count > 0))
                {
                    <div class="alert alert-danger border-0 rounded-3 small py-2 mt-3 text-center">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <span><i class="bi bi-exclamation-circle me-1"></i> @error.ErrorMessage</span>
                        }
                    </div>
                }
            </form>

            <div class="text-center mt-4 pt-2 border-top">
                <p class="text-muted small mb-0">
                    Already have an account?
                    <a href="/Auth/Login" class="login-link ms-1">Sign In instead</a>
                </p>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('togglePassword')?.addEventListener('click', function () {
            const passwordInput = document.getElementById('passwordInput');
            const icon = this.querySelector('i');
            const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordInput.setAttribute('type', type);
            icon.classList.toggle('bi-eye');
            icon.classList.toggle('bi-eye-slash');
        });
    </script>

</body>
</html>