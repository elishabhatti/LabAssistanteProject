@model LabAssistanteProject.Models.Users

@{
    ViewData["Title"] = "Register";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

<div class="d-flex align-items-center justify-content-center" style="min-height:80vh;">
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5">
                <div class="card border border-light-subtle shadow-none rounded-3 p-4">
                    <div class="card-body">

                        <div class="text-center mb-5">
                            <h2 class="fw-bold mb-1">Join Lab Assistant</h2>
                            <p class="text-muted small">Create your account to get started</p>
                        </div>

                        <form asp-action="Register" method="post">
                            <!-- Username -->
                            <div class="mb-3">
                                <label class="form-label small fw-medium text-secondary" for="usernameInput">Username *</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0 border-light-subtle rounded-start-3">
                                        <i class="bi bi-person-fill text-muted"></i>
                                    </span>
                                    <input asp-for="Username" id="usernameInput" class="form-control border-start-0 border-light-subtle rounded-end-3" placeholder="Enter username" required />
                                </div>
                                <span asp-validation-for="Username" class="text-danger small"></span>
                            </div>

                            <!-- Full Name -->
                            <div class="mb-3">
                                <label class="form-label small fw-medium text-secondary" for="fullnameInput">Full Name *</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0 border-light-subtle rounded-start-3">
                                        <i class="bi bi-card-text text-muted"></i>
                                    </span>
                                    <input asp-for="FullName" id="fullnameInput" class="form-control border-start-0 border-light-subtle rounded-end-3" placeholder="Enter full name" required />
                                </div>
                                <span asp-validation-for="FullName" class="text-danger small"></span>
                            </div>

                            <!-- Email -->
                            <div class="mb-3">
                                <label class="form-label small fw-medium text-secondary" for="emailInput">Email Address *</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0 border-light-subtle rounded-start-3">
                                        <i class="bi bi-envelope-fill text-muted"></i>
                                    </span>
                                    <input asp-for="Email" type="email" id="emailInput" class="form-control border-start-0 border-light-subtle rounded-end-3" placeholder="Enter your email" required />
                                </div>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <!-- Password -->
                            <div class="mb-3">
                                <label class="form-label small fw-medium text-secondary" for="passwordInput">Password *</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0 border-light-subtle rounded-start-3">
                                        <i class="bi bi-lock-fill text-muted"></i>
                                    </span>
                                    <input asp-for="Password" type="password" id="passwordInput" class="form-control border-start-0 border-light-subtle" placeholder="Enter password" required />
                                    <button type="button" id="togglePassword" class="btn btn-outline-secondary border-start-0 border-light-subtle rounded-end-3">
                                        <i class="bi bi-eye-slash-fill"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>

                            <!-- Role -->
                            <div class="mb-4">
                                <label class="form-label small fw-medium text-secondary" for="roleSelect">Role *</label>
                                <select asp-for="Role" id="roleSelect" class="form-select rounded-3">
                                    <option value="enduser" disabled selected hidden>Select a Role *</option>
                                    <option value="enduser">End User</option>
                                    <option value="facility_head">Facility Head</option>
                                    <option value="assignee">Assignee</option>
                                    <option value="admin">Admin</option>
                                </select>
                                <span asp-validation-for="Role" class="text-danger small"></span>
                            </div>

                            <!-- Submit -->
                            <div class="d-grid mb-3">
                                <button type="submit" class="btn btn-primary btn-md w-100 rounded-3 fw-bold">
                                    Register Account
                                </button>
                            </div>

                            @* Server-side validation errors *@
                            @{
                                var hasErrors = ViewData.ModelState.Values.Any(v => v.Errors.Count > 0);
                            }
                            @if (hasErrors)
                            {
                                <div class="alert alert-danger mt-2 p-2 text-center small" role="alert">
                                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                    {
                                        <div>@error.ErrorMessage</div>
                                    }
                                </div>
                            }
                        </form>

                        <div class="text-center mt-3">
                            <p class="text-muted small mb-0">
                                Already have an account?
                                <a href="/Auth/Login" class="text-primary fw-medium text-decoration-none ms-1">
                                    Login
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('togglePassword')?.addEventListener('click', function (e) {
        const passwordInput = document.getElementById('passwordInput');
        const icon = this.querySelector('i');
        const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
        passwordInput.setAttribute('type', type);
        icon.classList.toggle('bi-eye-fill');
        icon.classList.toggle('bi-eye-slash-fill');
    });
</script>
