@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login | LabAssistant Portal</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <!-- Urbanist Font -->
    <link href="https://fonts.googleapis.com/css2?family=Urbanist:wght@400;500;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --primary: #2563eb;
            --primary-hover: #1d4ed8;
            --bg-main: #f8fafc;
            --border-color: #e2e8f0;
            --text-main: #1e293b;
            --text-muted: #64748b;
        }

        * {
            font-family: 'Urbanist', sans-serif;
        }

        body {
            height: 100vh;
            color: var(--text-main);
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
        }

        /* Login Card */
        .login-card {
            background: white;
            border: 1px solid var(--border-color);
            border-radius: 16px;
            padding: 2.5rem;
            width: 100%;
            max-width: 420px;
            transition: transform 0.2s;
        }

        /* Brand Icon */
        .brand-logo {
            width: 52px;
            height: 52px;
            background: rgba(37, 99, 235, 0.1);
            color: var(--primary);
            border-radius: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.6rem;
            margin: 0 auto 1.5rem;
        }

        /* Form */
        .form-label {
            font-weight: 600;
            color: var(--text-muted);
            font-size: 0.8rem;
        }

        .input-group-text {
            background-color: #f8fafc;
            border: 1px solid var(--border-color);
            color: #94a3b8;
        }

        .form-control {
            border: 1px solid var(--border-color);
            padding: 0.75rem 1rem;
            font-size: 0.9rem;
        }

            .form-control:focus {
                border-color: var(--primary);
                box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
            }

        /* Button */
        .btn-primary {
            background-color: var(--primary);
            border: none;
            border-radius: 10px;
            font-weight: 600;
            padding: 0.75rem;
            transition: 0.2s;
        }

            .btn-primary:hover {
                background-color: var(--primary-hover);
            }

        .toggle-btn {
            background-color: #f8fafc;
            border: 1px solid var(--border-color);
            color: #64748b;
        }

        .register-link {
            color: var(--primary);
            font-weight: 600;
            text-decoration: none;
        }

            .register-link:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>

    <div class="container px-3">
        <div class="login-card mx-auto">

            <div class="brand-logo">
                <i class="bi bi-shield-lock-fill"></i>
            </div>

            <div class="text-center mb-4">
                <h2 class="fw-bold mb-1">Welcome Back</h2>
                <p class="text-muted small">Sign in to continue to LabAssistant</p>
            </div>

            <form asp-action="Login" method="post">

                <div class="mb-3">
                    <label class="form-label">Email Address</label>
                    <div class="input-group">
                        <span class="input-group-text rounded-start-3">
                            <i class="bi bi-envelope"></i>
                        </span>
                        <input name="email"
                               type="email"
                               class="form-control rounded-end-3"
                               placeholder="name@example.com"
                               required />
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label">Password</label>
                    <div class="input-group">
                        <span class="input-group-text rounded-start-3">
                            <i class="bi bi-key"></i>
                        </span>
                        <input name="password"
                               type="password"
                               id="passwordInput"
                               class="form-control"
                               placeholder="••••••••"
                               required />
                        <button type="button"
                                id="togglePassword"
                                class="input-group-text toggle-btn rounded-end-3">
                            <i class="bi bi-eye-slash"></i>
                        </button>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100 shadow-sm mb-3">
                    Sign In <i class="bi bi-arrow-right ms-2"></i>
                </button>

                @if (ViewData.ModelState.Values.Any(v => v.Errors.Count > 0))
                {
                    <div class="alert alert-danger border-0 rounded-3 small py-2 text-center">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <span>@error.ErrorMessage</span>
                        }
                    </div>
                }

            </form>

            <div class="text-center mt-4 pt-3 border-top">
                <p class="text-muted small mb-0">
                    New here?
                    <a href="/Auth/Register" class="register-link ms-1">Create an account</a>
                </p>
            </div>

        </div>
    </div>

    <script>
        document.getElementById('togglePassword')?.addEventListener('click', function () {
            const passwordInput = document.getElementById('passwordInput');
            const icon = this.querySelector('i');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.replace('bi-eye-slash', 'bi-eye');
            } else {
                passwordInput.type = 'password';
                icon.classList.replace('bi-eye', 'bi-eye-slash');
            }
        });
    </script>

</body>
</html>
