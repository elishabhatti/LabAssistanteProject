@{
    var requests = (List<LabAssistanteProject.Models.Requests>)ViewBag.Requests;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Requests | LabAssistant</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <!-- Urbanist -->
    <link href="https://fonts.googleapis.com/css2?family=Urbanist:wght@400;500;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --primary: #2563eb;
            --bg-main: #f8fafc;
            --border-color: #e2e8f0;
            --text-main: #1e293b;
            --text-muted: #64748b;
        }

        * {
            font-family: 'Urbanist', sans-serif;
        }

        body {
            background-color: var(--bg-main);
            color: var(--text-main);
        }

        /* Top Navigation */
        .secondary-nav {
            background: white;
            border-bottom: 1px solid var(--border-color);
            padding: 1rem 0;
        }

        .sec-nav-link {
            color: var(--text-muted);
            text-decoration: none;
            font-weight: 600;
            font-size: 0.9rem;
            padding: 0.5rem 1rem;
            border-radius: 10px;
            transition: 0.2s;
        }

            .sec-nav-link:hover {
                background: #f1f5f9;
                color: var(--primary);
            }

            .sec-nav-link.active {
                background: rgba(37, 99, 235, 0.1);
                color: var(--primary);
            }

        /* Header */
        .header-section {
            border-bottom: 1px solid var(--border-color);
            padding-bottom: 1.5rem;
            margin-bottom: 2.5rem;
        }

        /* Table Card */
        .card {
            border: 1px solid var(--border-color);
            border-radius: 14px;
            background: white;
            box-shadow: none;
            overflow: hidden;
        }

        .table thead th {
            background: #f8fafc;
            border-bottom: 1px solid var(--border-color);
            color: var(--text-muted);
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            padding: 1rem;
        }

        .table td {
            padding: 1rem;
            vertical-align: middle;
            border-bottom: 1px solid var(--border-color);
            font-size: 0.9rem;
        }

        /* Status Pills */
        .status-pill {
            padding: 4px 10px;
            border-radius: 6px;
            font-size: 0.75rem;
            font-weight: 600;
            border: 1px solid transparent;
        }

        .status-completed {
            background: #f0fdf4;
            color: #16a34a;
            border-color: #bbf7d0;
        }

        .status-progress {
            background: #eff6ff;
            color: #2563eb;
            border-color: #bfdbfe;
        }

        .status-pending {
            background: #fefce8;
            color: #a16207;
            border-color: #fde68a;
        }

        .remarks-text {
            font-size: 0.8rem;
            color: var(--text-muted);
            background: #f8fafc;
            padding: 8px 12px;
            border-radius: 6px;
            border: 1px solid var(--border-color);
            max-width: 250px;
        }

        .btn-action {
            padding: 5px 8px;
            border-radius: 6px;
            border: 1px solid var(--border-color);
            background: white;
            color: var(--text-muted);
            transition: 0.2s;
        }

            .btn-action:hover {
                border-color: var(--primary);
                color: var(--primary);
            }
    </style>
</head>
<body>

    <!-- Top Navigation -->
    <div class="secondary-nav">
        <div class="container d-flex justify-content-between align-items-center">
            <div class="d-flex gap-2">
                <a class="sec-nav-link" href="/Roles/EndUser">
                    <i class="bi bi-plus-square me-2"></i>New Request
                </a>
                <a class="sec-nav-link active" href="#">
                    <i class="bi bi-list-ul me-2"></i>My Requests
                </a>
                <a class="sec-nav-link" href="/Auth/ChangePassword">
                    <i class="bi bi-key me-2"></i>Security
                </a>
                <a class="sec-nav-link" href="/Pages/Help">
                    <i class="bi bi-question-circle me-2"></i>Help
                </a>
            </div>

            <form asp-controller="Auth" asp-action="Logout" method="post">
                <button class="btn btn-outline-danger btn-sm fw-bold">
                    <i class="bi bi-box-arrow-right me-1"></i> Logout
                </button>
            </form>
        </div>
    </div>

    <!-- Content -->
    <main class="container py-5">

        <div class="header-section d-flex justify-content-between align-items-end">
            <div>
                <h2 class="fw-bold m-0">Request History</h2>
                <p class="text-muted m-0">
                    Track the live status of your submitted service tickets.
                </p>
            </div>
            <span class="badge bg-light text-dark border px-3 py-2 rounded-pill small fw-bold">
                Total: @(requests?.Count ?? 0) Tickets
            </span>
        </div>

        <div class="card">
            <div class="table-responsive">
                <table class="table mb-0 table-hover">
                    <thead>
                        <tr>
                            <th class="ps-4">Ticket ID</th>
                            <th>Facility</th>
                            <th>Priority</th>
                            <th>Status</th>
                            <th>Technician Notes</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (requests != null && requests.Any())
                        {
                            foreach (var req in requests)
                            {
                                var status = req.Status?.ToLower() ?? "pending";
                                var sClass = status == "completed" ? "status-completed"
                                : status == "in-progress" ? "status-progress"
                                : "status-pending";

                                <tr>
                                    <td class="ps-4">
                                        <div class="fw-bold">#@req.Id</div>
                                        <div class="small text-muted">@req.CreatedAt.ToString("dd MMM yyyy")</div>
                                    </td>
                                    <td>
                                        <div class="fw-medium">@req.Facility?.Name</div>
                                        <div class="small text-muted text-truncate" style="max-width:200px">
                                            @req.Description
                                        </div>
                                    </td>
                                    <td>
                                        <span class="small fw-bold text-primary">
                                            <i class="bi bi-dot h4 m-0"></i>@req.Severity?.ToUpper()
                                        </span>
                                    </td>
                                    <td>
                                        <span class="status-pill @sClass">
                                            @char.ToUpper(status[0])@status.Substring(1)
                                        </span>
                                    </td>
                                    <td>
                                        <div class="remarks-text">
                                            @(req.Remarks ?? "No updates yet...")
                                        </div>
                                    </td>
                                    <td class="text-end pe-4">
                                        @if (status != "completed")
                                        {
                                            <div class="d-flex justify-content-end gap-2">
                                                <a asp-controller="Requests"
                                                   asp-action="EditRequest"
                                                   asp-route-id="@req.Id"
                                                   class="btn-action">
                                                    <i class="bi bi-pencil"></i>
                                                </a>

                                                <form asp-controller="Requests"
                                                      asp-action="Delete"
                                                      asp-route-id="@req.Id"
                                                      method="post"
                                                      onsubmit="return confirm('Delete this request?');">
                                                    <button type="submit" class="btn-action text-danger">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">
                                                <i class="bi bi-lock-fill"></i> Closed
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5">
                                    <p class="text-muted mb-3">No requests found.</p>
                                    <a href="/Roles/EndUser" class="btn btn-primary btn-sm px-4">
                                        Create New Request
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
