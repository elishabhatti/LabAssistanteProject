@{
    Layout = null;
    var requests = (List<LabAssistanteProject.Models.Requests>)ViewBag.Requests;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Requests | LabAssistant</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <style>
        :root {
            --primary: #4361ee;
            --primary-soft: rgba(67, 97, 238, 0.1);
            --sidebar-bg: #ffffff;
            --bg-main: #f8f9fc;
            --border: #edf2f7;
            --dark: #1e293b;
        }

        body {
            background-color: var(--bg-main);
            font-family: 'Inter', sans-serif;
            color: var(--dark);
        }

        /* Sidebar Styling */
        .sidebar {
            width: 280px;
            height: 100vh;
            position: fixed;
            background: var(--sidebar-bg);
            border-right: 1px solid var(--border);
            padding: 1.5rem;
            z-index: 100;
        }

        .nav-link {
            color: #64748b;
            font-weight: 500;
            padding: 0.8rem 1rem;
            border-radius: 12px;
            margin-bottom: 0.5rem;
            transition: 0.3s;
            display: flex;
            align-items: center;
        }

            .nav-link:hover {
                background: #f1f5f9;
                color: var(--primary);
            }

            .nav-link.active {
                background: var(--primary);
                color: white !important;
                box-shadow: 0 4px 12px rgba(67, 97, 238, 0.2);
            }

        /* Main Content */
        .content {
            margin-left: 280px;
            padding: 2.5rem;
        }

        .header-top {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2.5rem;
        }

        /* Table & Card Styling */
        .card {
            border: none;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.03);
            background: white;
        }

        .table thead th {
            background: #f8fafc;
            text-transform: uppercase;
            font-size: 0.75rem;
            font-weight: 700;
            letter-spacing: 0.03em;
            color: #94a3b8;
            padding: 1.2rem 1rem;
            border: none;
        }

        .table td {
            padding: 1.2rem 1rem;
            vertical-align: middle;
            border-top: 1px solid var(--border);
        }

        /* Status & Badge Styling */
        .badge-severity {
            padding: 6px 12px;
            border-radius: 8px;
            font-size: 0.7rem;
            font-weight: 700;
            text-transform: uppercase;
        }

        .status-indicator {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            display: inline-block;
            margin-right: 8px;
        }

        .remarks-box {
            background: #f1f5f9;
            padding: 10px 14px;
            border-radius: 10px;
            font-size: 0.85rem;
            color: #475569;
            border-left: 4px solid var(--primary);
        }
    </style>
</head>
<body>

    <div class="sidebar d-flex flex-column">
        <div class="d-flex align-items-center mb-5 px-2">
            <div class="bg-primary text-white p-2 rounded-3 me-2 shadow-sm">
                <i class="bi bi-cpu-fill"></i>
            </div>
            <h4 class="m-0 fw-bold">LabAssist</h4>
        </div>

        <nav class="nav flex-column flex-grow-1">
            <a class="nav-link" href="/Roles/EndUser"><i class="bi bi-plus-circle me-2"></i> Create Request</a>
            <a class="nav-link active" href="#"><i class="bi bi-clock-history me-2"></i> My Requests</a>
            <a class="nav-link" href="/Pages/Help"><i class="bi bi-question-circle me-2"></i> Help Center</a>
        </nav>

        <div class="mt-auto">
            <form asp-controller="Auth" asp-action="Logout" method="post">
                <button class="btn btn-light text-danger w-100 rounded-3 fw-bold shadow-sm">
                    <i class="bi bi-box-arrow-left me-2"></i> Logout
                </button>
            </form>
        </div>
    </div>

    <div class="content">

        <div class="header-top">
            <div>
                <h3 class="fw-bold m-0 text-dark">Request History 📜</h3>
                <p class="text-muted small mb-0">Track and monitor all your service tickets</p>
            </div>
            <div class="d-flex align-items-center bg-white p-2 pe-3 rounded-pill border shadow-sm">
                <div class="bg-primary-soft text-primary rounded-circle p-2 me-2 d-flex align-items-center justify-content-center" style="width:35px; height:35px;">
                    <i class="bi bi-person-fill"></i>
                </div>
                <span class="small fw-bold">@ViewBag.username</span>
            </div>
        </div>

        <div class="card">
            <div class="card-header bg-white border-0 p-4 d-flex justify-content-between align-items-center">
                <h5 class="mb-0 fw-bold">Recent Activity</h5>
                <span class="badge bg-primary rounded-pill">@requests?.Count Total</span>
            </div>

            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th class="ps-4">Ticket Details</th>
                            <th>Facility / Location</th>
                            <th>Priority</th>
                            <th>Status</th>
                            <th>Assigned Specialist</th>
                            <th>Updates / Remarks</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (requests != null && requests.Any())
                        {
                            foreach (var req in requests)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="fw-bold text-primary">#REQ-@req.Id</div>
                                        <div class="text-muted" style="font-size: 0.75rem;">
                                            <i class="bi bi-calendar3 me-1"></i> @req.CreatedAt.ToString("MMM dd, yyyy")
                                        </div>
                                    </td>
                                    <td>
                                        <div class="fw-semibold text-dark">@req.Facility?.Name</div>
                                        <div class="text-muted small text-truncate" style="max-width: 180px;" title="@req.Description">
                                            @req.Description
                                        </div>
                                    </td>
                                    <td>
                                        @{
                                            var sClass = req.Severity?.ToLower() == "critical" ? "danger" :
                                            (req.Severity?.ToLower() == "high" ? "warning" : "info");
                                        }
                                        <span class="badge-severity bg-@sClass bg-opacity-10 text-@sClass border border-@sClass border-opacity-25">
                                            @req.Severity
                                        </span>
                                    </td>
                                    <td>
                                        @{
                                            var status = req.Status?.ToLower() ?? "pending";
                                            var statusColor = status == "completed" ? "success" : (status == "in-progress" ? "warning" : "primary");
                                        }
                                        <div class="d-flex align-items-center fw-bold small text-@statusColor">
                                            <span class="status-indicator bg-@statusColor"></span>
                                            @(char.ToUpper(status[0]) + status.Substring(1))
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="small fw-medium">
                                                @(req.Assignee?.Username ?? "Unassigned")
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="remarks-box">
                                            <i class="bi bi-chat-right-text me-1 opacity-50"></i>
                                            @(req.Remarks ?? "No technician notes available yet.")
                                        </div>
                                    </td>
                                    <td class="text-end pe-4">
                                        @if (req.Status?.ToLower() != "completed")
                                        {
                                            <div class="d-flex justify-content-end gap-2">
                                                <a asp-controller="Requests" asp-action="EditRequest" asp-route-id="@req.Id" class="btn btn-sm btn-outline-primary border-0">
                                                    <i class="bi bi-pencil-square"></i>
                                                </a>

                                                <form asp-controller="Requests" asp-action="Delete" asp-route-id="@req.Id"
                                                      method="post" onsubmit="return confirm('Are you sure you want to delete this request?');">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger border-0">
                                                        <i class="bi bi-trash3"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="badge bg-light text-muted fw-normal">Locked</span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5">
                                    <img src="https://cdn-icons-png.flaticon.com/512/7486/7486744.png" width="80" class="opacity-25 mb-3"><br>
                                    <p class="text-muted">No requests found in your history.</p>
                                    <a href="/Requests/Create" class="btn btn-primary btn-sm rounded-pill px-4">Create First Ticket</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>