<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Technician Portal | LabAssistant</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <style>
        :root {
            --primary: #2563eb;
            --bg-main: #ffffff;
            --border: #e2e8f0;
            --text-main: #1e293b;
            --text-muted: #64748b;
        }

        body {
            background: var(--bg-main);
            font-family: 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
            color: var(--text-main);
            margin: 0;
        }

        .secondary-nav {
            background: white;
            border-bottom: 1px solid var(--border);
            padding: 0.75rem 0;
        }

        .sec-nav-link {
            color: var(--text-muted);
            text-decoration: none;
            font-weight: 600;
            font-size: 0.9rem;
            padding: 0.5rem 1rem;
            border-radius: 10px;
        }

            .sec-nav-link.active {
                background: rgba(37,99,235,.1);
                color: var(--primary);
            }

        .content {
            max-width: 1300px;
            margin: auto;
            padding: 3rem;
        }

        .card {
            background: white;
            border: 1px solid var(--border);
            border-radius: 14px;
        }

        table th {
            background: #f8fafc;
            font-size: 0.75rem;
            text-transform: uppercase;
            color: var(--text-muted);
            letter-spacing: .05em;
        }

        table td {
            font-size: .9rem;
            vertical-align: middle;
        }

        .badge-status {
            font-size: .75rem;
            padding: 5px 10px;
            border-radius: 6px;
            font-weight: 600;
        }

        .stat-card {
            border: 1px solid var(--border);
            border-radius: 14px;
            background: white;
            padding: 1.25rem;
        }
    </style>
</head>
<body>

    <!-- Top Nav -->
    <div class="secondary-nav">
        <div class="container d-flex justify-content-between align-items-center">
            <div class="d-flex gap-2">
                <a class="sec-nav-link active" href="#">
                    <i class="bi bi-tools me-2"></i>My Tasks
                </a>
                <a class="sec-nav-link" href="/Pages/Help">
                    <i class="bi bi-question-circle me-2"></i>Help
                </a>
            </div>

            <form asp-controller="Auth" asp-action="Logout" method="post">
                <button class="btn btn-outline-danger btn-sm fw-bold">
                    <i class="bi bi-box-arrow-right me-1"></i>Logout
                </button>
            </form>
        </div>
    </div>

    <!-- Content -->
    <div class="content">

        <div class="mb-4">
            <h3 class="fw-bold m-0">Assingnee Dashboard</h3>
            <p class="text-muted small">
                Welcome @ViewBag.username — you have
                <b>@(ViewBag.MyRequests?.Count ?? 0)</b> active tasks
            </p>
        </div>

        <!-- Stats -->
        <div class="row g-3 mb-4">
            <div class="col-md-4">
                <div class="stat-card d-flex align-items-center">
                    <div class="bg-primary bg-opacity-10 text-primary p-3 rounded-circle me-3">
                        <i class="bi bi-list-task"></i>
                    </div>
                    <div>
                        <div class="text-muted small fw-bold">Total Assigned</div>
                        <div class="h4 fw-bold mb-0">@(ViewBag.MyRequests?.Count ?? 0)</div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="stat-card d-flex align-items-center">
                    <div class="bg-info bg-opacity-10 text-info p-3 rounded-circle me-3">
                        <i class="bi bi-clock-history"></i>
                    </div>
                    <div>
                        <div class="text-muted small fw-bold">In Progress</div>
                        <div class="h4 fw-bold mb-0">@ViewBag.WIPCount</div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="stat-card d-flex align-items-center">
                    <div class="bg-success bg-opacity-10 text-success p-3 rounded-circle me-3">
                        <i class="bi bi-check-circle"></i>
                    </div>
                    <div>
                        <div class="text-muted small fw-bold">Completed</div>
                        <div class="h4 fw-bold mb-0">@ViewBag.CompletedCount</div>
                    </div>
                </div>
            </div>
        </div>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-primary border-0 rounded-4 shadow-sm mb-4">
                <i class="bi bi-info-circle-fill me-2"></i>@ViewBag.Message
            </div>
        }

        <!-- Table -->
        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover m-0 align-middle">
                    <thead>
                        <tr>
                            <th class="ps-4">Ticket</th>
                            <th>Issue</th>
                            <th>Facility</th>
                            <th>Status</th>
                            <th style="min-width:280px;">Update</th>
                            <th>Complete</th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.MyRequests != null && ((IEnumerable<dynamic>)ViewBag.MyRequests).Any())
                        {
                            foreach (var r in ViewBag.MyRequests)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <strong>#REQ-@r.Id</strong><br />
                                        <small class="text-muted">@r.CreatedAt.ToString("MMM dd")</small>
                                    </td>
                                    <td>
                                        <div class="fw-bold">@r.Requestor?.Username</div>
                                        <small class="text-muted">@r.Description</small>
                                    </td>
                                    <td class="fw-semibold">@r.Facility?.Name</td>
                                    <td>
                                        <span class="badge-status
                                @(r.Status == "Completed" ? "bg-success-subtle text-success" :
                                                                        r.Status == "Work-In-Progress" ? "bg-info-subtle text-info" :
                                                                        "bg-warning-subtle text-warning")">
                                    @r.Status
                                </span>
                            </td>
                            <td>
                                <textarea class="form-control form-control-sm mb-2" rows="1" placeholder="Add remarks">@r.Remarks</textarea>
                                <div class="d-flex gap-2">
                                    <select class="form-select form-select-sm w-50">
                                        <option selected="@(@r.Status == "Work-In-Progress")">Work-In-Progress</option>
                                        <option selected="@(@r.Status == "Completed")">Completed</option>
                                        <option selected="@(@r.Status == "On-Hold")">On-Hold</option>
                                    </select>
                                    <button class="btn btn-primary btn-sm px-3">Update</button>
                                </div>
                            </td>
                            <td class="text-center">
                                <form asp-action="CompleteRequest" method="post" class="m-0">
                                    <input type="hidden" name="requestId" value="@r.Id" />
                                    <button type="submit" class="btn btn-success btn-sm rounded-pill px-3">
                                        <i class="bi bi-check-circle me-1"></i> Complete
                                    </button>
                                </form>
                            </td>
                        </tr>
                                                }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5 text-muted fw-bold">
                                    No tasks assigned 🎉
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
