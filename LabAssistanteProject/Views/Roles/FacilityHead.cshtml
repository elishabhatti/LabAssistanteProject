@{
    var requests = (List<LabAssistanteProject.Models.Requests>)ViewBag.Requests;
    var assignees = (List<LabAssistanteProject.Models.Users>)ViewBag.Assignees;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Facility Head | LabAssistant</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <style>
        :root {
            --primary: #2563eb;
            --bg-main: #ffffff;
            --border: #e2e8f0;
            --text-main: #1e293b;
            --text-muted: #64748b;
        }

        body {
            background: var(--bg-main);
            font-family: 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
            color: var(--text-main);
            margin: 0;
        }

        /* Top Nav */
        .secondary-nav {
            background: white;
            border-bottom: 1px solid var(--border);
            padding: 0.75rem 0;
        }

        .sec-nav-link {
            color: var(--text-muted);
            text-decoration: none;
            font-weight: 600;
            font-size: 0.9rem;
            padding: 0.5rem 1rem;
            border-radius: 10px;
        }

            .sec-nav-link.active {
                background: rgba(37, 99, 235, 0.1);
                color: var(--primary);
            }

        /* Content */
        .content {
            max-width: 1300px;
            margin: auto;
            padding: 3rem;
        }

        .card {
            border: 1px solid var(--border);
            border-radius: 14px;
            background: white;
        }

        table th {
            background: #f8fafc;
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: .05em;
            color: var(--text-muted);
        }

        table td {
            font-size: 0.9rem;
            vertical-align: middle;
        }

        .badge-pill {
            padding: 6px 12px;
            border-radius: 8px;
            font-size: 0.75rem;
            font-weight: 600;
        }

        .sev-high {
            background: #fee2e2;
            color: #dc2626;
        }

        .sev-med {
            background: #fef3c7;
            color: #d97706;
        }

        .sev-low {
            background: #dcfce7;
            color: #16a34a;
        }
    </style>
</head>
<body>

    <!-- Top Nav -->
    <div class="secondary-nav">
        <div class="container d-flex justify-content-between align-items-center">
            <div class="d-flex gap-2">
                <a class="sec-nav-link active" href="#">
                    <i class="bi bi-grid me-2"></i>Facility Desk
                </a>
                <a class="sec-nav-link" href="#monthly-report">
                    <i class="bi bi-bar-chart-line me-2"></i>Monthly Report
                </a>
                <a class="sec-nav-link" href="/Pages/Help">
                    <i class="bi bi-question-circle me-2"></i>Help
                </a>
            </div>

            <form asp-controller="Auth" asp-action="Logout" method="post">
                <button class="btn btn-outline-danger btn-sm fw-bold">
                    <i class="bi bi-box-arrow-right me-1"></i>Logout
                </button>
            </form>
        </div>
    </div>

    <!-- Content -->
    <div class="content">

        <div class="mb-4">
            <h3 class="fw-bold m-0">Facility Head Dashboard</h3>
            <p class="text-muted small">Assign technicians and monitor service tickets</p>
        </div>

        <div class="card shadow-sm">
            <div class="p-3 border-bottom d-flex justify-content-between">
                <h6 class="fw-bold m-0">
                    <i class="bi bi-list-task me-2 text-primary"></i>Service Requests
                </h6>
                <span class="badge bg-warning text-dark">
                    Pending: @requests.Count(r => r.AssigneeId == null)
                </span>
            </div>

            <div class="table-responsive">
                <table class="table m-0 table-hover">
                    <thead>
                        <tr>
                            <th>Ticket</th>
                            <th>Issue</th>
                            <th>Priority</th>
                            <th>User</th>
                            <th>Status</th>
                            <th style="width:220px">Assign</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in requests)
                        {
                            var sev = r.Severity?.ToLower() switch
                            {
                                "high" => "sev-high",
                                "medium" => "sev-med",
                                _ => "sev-low"
                            };

                            <tr>
                                <td>
                                    <strong>#REQ-@r.Id</strong><br />
                                    <small class="text-muted">@r.CreatedAt.ToString("MMM dd")</small>
                                </td>

                                <td>
                                    <div class="fw-medium text-primary">@r.Facility?.Name</div>
                                    <small class="text-muted">@r.Description</small>
                                </td>

                                <td>
                                    <span class="badge-pill @sev">@r.Severity</span>
                                </td>

                                <td>
                                    <strong>@r.Requestor?.Username</strong><br />
                                    <small class="text-muted">@r.Requestor?.Email</small>
                                </td>

                                <td>
                                    <span class="badge bg-secondary bg-opacity-10 text-secondary">
                                        @(r.Status ?? "Unassigned")
                                    </span>
                                </td>

                                <td>
                                    <form asp-controller="Roles" asp-action="Assign" method="post" class="d-flex gap-2">
                                        <input type="hidden" name="requestId" value="@r.Id" />
                                        <select name="assigneeId" class="form-select form-select-sm" required>
                                            <option value="">Select</option>
                                            @foreach (var a in assignees)
                                            {
                                                <option value="@a.Id">@a.Username</option>
                                            }
                                        </select>
                                        <button class="btn btn-primary btn-sm">Assign</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div id="monthly-report" class="mt-5">

            <div class="mb-3">
                <h4 class="fw-bold">Monthly Report</h4>
                <p class="text-muted small">
                    Current Month Overview
                </p>
            </div>

            <div class="row g-3">

                <div class="col-md-3">
                    <div class="card p-3 text-center">
                        <div class="text-muted small fw-bold">
                            Total Requests
                        </div>
                        <div class="h3 fw-bold text-primary">
                            @ViewBag.MonthlyTotal
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card p-3 text-center">
                        <div class="text-muted small fw-bold">
                            Closed Requests
                        </div>
                        <div class="h3 fw-bold text-success">
                            @ViewBag.MonthlyClosed
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card p-3 text-center">
                        <div class="text-muted small fw-bold">
                            Pending Requests
                        </div>
                        <div class="h3 fw-bold text-warning">
                            @ViewBag.MonthlyPending
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card p-3 text-center">
                        <div class="text-muted small fw-bold">
                            Avg Completion (hrs)
                        </div>
                        <div class="h3 fw-bold text-dark">
                            @Math.Round(ViewBag.MonthlyAvgTime, 1)
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
