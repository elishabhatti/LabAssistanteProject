@model LabAssistanteProject.Models.Requests
@{
    Layout = null;
    var facilities = (List<LabAssistanteProject.Models.Facilities>)ViewBag.Facilities;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Request | LabAssist</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            background: linear-gradient(135deg, #f6f8fb 0%, #e9eef5 100%);
            font-family: 'Plus Jakarta Sans', sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
        }

        .edit-card {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.7);
            border-radius: 24px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.05);
            overflow: hidden;
            transition: transform 0.3s ease;
        }

        .card-header-custom {
            background: white;
            padding: 2rem 2rem 1rem;
            border-bottom: none;
        }

        .form-label {
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            color: #64748b;
            margin-bottom: 0.5rem;
        }

        .form-control, .form-select {
            border: 1.5px solid #e2e8f0;
            border-radius: 12px;
            padding: 0.75rem 1rem;
            font-weight: 500;
            color: #1e293b;
            transition: all 0.2s;
        }

            .form-control:focus, .form-select:focus {
                border-color: #4361ee;
                box-shadow: 0 0 0 4px rgba(67, 97, 238, 0.1);
                background: white;
            }

        .btn-primary {
            background: #4361ee;
            border: none;
            border-radius: 12px;
            padding: 0.8rem;
            font-weight: 700;
            box-shadow: 0 4px 12px rgba(67, 97, 238, 0.2);
            transition: all 0.3s;
        }

            .btn-primary:hover {
                background: #374fc7;
                transform: translateY(-2px);
                box-shadow: 0 6px 15px rgba(67, 97, 238, 0.3);
            }

        .btn-light {
            background: #f1f5f9;
            border: none;
            color: #64748b;
            border-radius: 12px;
            padding: 0.8rem;
            font-weight: 600;
        }

        .badge-id {
            background: #f0f3ff;
            color: #4361ee;
            padding: 6px 12px;
            border-radius: 8px;
            font-size: 0.8rem;
        }

        .icon-box {
            width: 40px;
            height: 40px;
            background: #4361ee;
            color: white;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="edit-card p-4">

                    <div class="d-flex align-items-center mb-4 px-2">
                        <div class="icon-box">
                            <i class="bi bi-pencil-square fs-5"></i>
                        </div>
                        <div>
                            <h4 class="fw-bold m-0 text-dark">Edit Ticket</h4>
                            <span class="badge-id fw-bold">#REQ-@Model.Id</span>
                        </div>
                        <a href="/Home/Index" class="ms-auto btn-close" style="font-size: 0.8rem;"></a>
                    </div>

                    <form asp-controller="Requests" asp-action="EditRequest" method="post" class="px-2">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label class="form-label fw-bold"><i class="bi bi-geo-alt me-1"></i> Facility / Location</label>
                            <select asp-for="FacilityId" class="form-select">
                                @foreach (var f in facilities)
                                {
                                    <option value="@f.Id">@f.Name</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold"><i class="bi bi-exclamation-triangle me-1"></i> Priority Level</label>
                            <select asp-for="Severity" class="form-select">
                                <option value="Low">🟢 Low Priority</option>
                                <option value="Medium">🟡 Medium Priority</option>
                                <option value="High">🟠 High Priority</option>
                                <option value="Critical">🔴 Critical Status</option>
                            </select>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold"><i class="bi bi-card-text me-1"></i> Issue Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Describe the problem in detail..."></textarea>
                        </div>

                        <div class="d-grid gap-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-cloud-arrow-up me-2"></i> Update Request
                            </button>
                            <a href="/Home/Index" class="btn btn-light">
                                Cancel
                            </a>
                        </div>
                    </form>

                    <div class="mt-4 text-center">
                        <p class="text-muted" style="font-size: 0.75rem;">
                            <i class="bi bi-info-circle me-1"></i> Updates will be notified to the assigned technician.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>