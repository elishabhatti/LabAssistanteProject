<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<style>
    :root {
        --primary: #2563eb;
        --bg-main: #f8fafc;
        --border-color: #e2e8f0;
        --text-muted: #64748b;
        --success: #10b981;
        --warning: #f59e0b;
    }

    .admin-sub-nav {
        background: #ffffff;
        border-bottom: 1px solid var(--border-color);
        margin-bottom: 2rem;
        position: sticky;
        top: 0;
        z-index: 1000;
    }

        .admin-sub-nav .nav-link {
            color: var(--text-muted);
            font-weight: 600;
            padding: 1.25rem 1rem;
            border-bottom: 3px solid transparent;
            border-radius: 0;
            transition: all 0.2s;
        }

            .admin-sub-nav .nav-link:hover {
                color: var(--primary);
            }

            .admin-sub-nav .nav-link.active {
                color: var(--primary) !important;
                background: transparent !important;
                border-bottom-color: var(--primary);
            }

    .stat-card {
        border: 1px solid var(--border-color);
        border-top: 4px solid var(--primary);
        border-radius: 12px;
        background: white;
        padding: 1.5rem;
    }

    .table-container {
        border: 1px solid var(--border-color);
        border-radius: 12px;
        background: white;
        overflow: hidden;
    }

    .badge-status {
        padding: 0.35rem 0.65rem;
        border-radius: 6px;
        font-size: 0.75rem;
        font-weight: 600;
        border: 1px solid;
    }

    .profile-pill {
        border: 1px solid var(--border-color);
        padding: 0.4rem 0.8rem;
        border-radius: 50px;
        background: white;
    }

    .chart-wrapper {
        position: relative;
        height: 300px;
        width: 100%;
    }
</style>

<div class="admin-sub-nav shadow-sm">
    <div class="container d-flex justify-content-between align-items-center">
        <ul class="nav nav-pills" id="adminTabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" data-bs-toggle="tab" href="#overview"><i class="bi bi-grid-1x2 me-2"></i>Overview</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#users"><i class="bi bi-people me-2"></i>User Logs</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#facilities"><i class="bi bi-door-open me-2"></i>Labs</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#requests"><i class="bi bi-ticket-perforated me-2"></i>Requests</a>
            </li>
        </ul>

        <div class="profile-pill d-none d-md-flex align-items-center">
            <img src="https://ui-avatars.com/api/?name=@ViewBag.username&background=2563eb&color=fff" class="rounded-circle me-2" width="28">
            <span class="small fw-bold">Admin Panel</span>
        </div>
    </div>
</div>

<div class="container mb-5">
    <div class="row align-items-center mb-4">
        <div class="col-md-6">
            <h2 class="fw-bold m-0">Administrator Dashboard</h2>
            <p class="text-muted small">System activity monitoring and resource control</p>
        </div>
        <div class="col-md-6 text-md-end">
            <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                <button class="btn btn-outline-danger btn-sm rounded-pill px-4 fw-bold">
                    <i class="bi bi-box-arrow-left me-2"></i>Sign Out
                </button>
            </form>
        </div>
    </div>

    <div class="tab-content">
        <div class="tab-pane fade show active" id="overview">
            <div class="row g-4 mb-4">
                <div class="col-md-4">
                    <div class="stat-card">
                        <span class="text-muted small fw-bold text-uppercase">Total Users</span>
                        <h2 class="fw-bold mt-1 mb-0">@ViewBag.TotalUsers</h2>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stat-card" style="border-top-color: var(--success);">
                        <span class="text-muted small fw-bold text-uppercase">Total Facilities</span>
                        <h2 class="fw-bold mt-1 mb-0">@ViewBag.TotalFacilities</h2>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stat-card" style="border-top-color: var(--warning);">
                        <span class="text-muted small fw-bold text-uppercase">Active Request</span>
                        <h2 class="fw-bold mt-1 mb-0">@ViewBag.TotalRequests</h2>
                    </div>
                </div>
            </div>

            <div class="row g-4">
                <div class="col-md-8">
                    <div class="card p-4 shadow-sm border-0">
                        <h6 class="fw-bold mb-4 border-bottom pb-2">Weekly Request Activity</h6>
                        <div class="chart-wrapper">
                            <canvas id="requestChart"></canvas>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card p-4 shadow-sm border-0">
                        <h6 class="fw-bold mb-4 border-bottom pb-2">Resource Mix</h6>
                        <div class="chart-wrapper">
                            <canvas id="donutChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="tab-pane fade" id="users">
            <div class="table-container shadow-sm">
                <table class="table m-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Identity</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th class="text-end pe-4">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var u in ViewBag.AllUsers)
                        {
                            <tr>
                                <td class="ps-4">
                                    <span class="text-muted me-2 small">#@u.Id</span>
                                    <span class="fw-bold">@u.Username</span>
                                </td>
                                <td class="text-muted small">@u.Email</td>
                                <td><span class="badge-status bg-light text-dark">@u.Role</span></td>
                                <td class="text-end pe-4"><span class="text-success small fw-bold">● Active</span></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="tab-pane fade" id="facilities">
            <div class="row g-3">
                @foreach (var f in ViewBag.AllFacilities)
                {
                    <div class="col-md-6">
                        <div class="card p-3 h-100 shadow-sm border-0">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="d-flex">
                                    <div class="bg-light p-2 rounded-3 me-3 text-primary"><i class="bi bi-building h4"></i></div>
                                    <div>
                                        <h6 class="fw-bold m-0">@f.Name</h6>
                                        <p class="text-muted small m-0 mt-1">@f.Description</p>
                                    </div>
                                </div>
                                <div class="dropdown">
                                    <button class="btn btn-light btn-sm border" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></button>
                                    <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                                        <li><button class="dropdown-item py-2" onclick="openEditModal(@f.Id, '@f.Name', '@f.Description')"><i class="bi bi-pencil me-2"></i>Edit</button></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form asp-action="DeleteFacility" method="post" onsubmit="return confirm('Delete this lab?')">
                                                <input type="hidden" name="id" value="@f.Id" />
                                                <button type="submit" class="dropdown-item text-danger py-2"><i class="bi bi-trash me-2"></i>Delete</button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="tab-pane fade" id="requests">
            <div class="table-container shadow-sm">
                <table class="table m-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Request ID</th>
                            <th>Requestor</th>
                            <th>Facility</th>
                            <th>Status</th>
                            <th>Assignee</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in ViewBag.AllRequests)
                        {
                            <tr>
                                <td class="ps-4"><strong>#REQ-@r.Id</strong><br><small class="text-muted">@r.CreatedAt.ToString("MMM dd")</small></td>
                                <td class="small">@r.Requestor?.Username</td>
                                <td><span class="badge-status bg-white text-primary border-primary">@r.Facility?.Name</span></td>
                                <td><span class="badge-status @(r.Status == "unassigned" ? "bg-warning-subtle text-warning border-warning" : "bg-info-subtle text-info border-info")">@r.Status</span></td>
                                <td class="small">@(r.Assignee?.Username ?? "Unassigned")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editFacilityModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <form asp-action="UpdateFacility" method="post">
                <div class="modal-header">
                    <h6 class="modal-title fw-bold">Edit Lab Details</h6>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-4">
                    <input type="hidden" name="id" id="editId" />
                    <div class="mb-3">
                        <label class="form-label small fw-bold">Lab Name</label>
                        <input type="text" name="name" id="editName" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label small fw-bold">Description</label>
                        <textarea name="description" id="editDesc" class="form-control" rows="3" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light border" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary px-4">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Line Chart - Weekly Activity
        const ctx = document.getElementById('requestChart').getContext('2d');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                datasets: [{
                    label: 'Request',
                    data: [12, 19, 8, 15, 22, 10, 17],
                    borderColor: '#2563eb',
                    backgroundColor: 'rgba(37, 99, 235, 0.1)',
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: { y: { beginAtZero: true }, x: { grid: { display: false } } }
            }
        });

        // Donut Chart - Resource Mix
        const ctx2 = document.getElementById('donutChart').getContext('2d');
        new Chart(ctx2, {
            type: 'doughnut',
            data: {
                labels: ['Users', 'Labs', 'Requests'],
                datasets: [{
                    data: [@ViewBag.TotalUsers, @ViewBag.TotalFacilities, @ViewBag.TotalRequests],
                    backgroundColor: ['#2563eb', '#10b981', '#f59e0b'],
                    borderWidth: 2,
                    borderColor: '#ffffff'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                cutout: '75%',
                plugins: { legend: { position: 'bottom' } }
            }
        });
    });

    function openEditModal(id, name, desc) {
        document.getElementById('editId').value = id;
        document.getElementById('editName').value = name;
        document.getElementById('editDesc').value = desc;
        new bootstrap.Modal(document.getElementById('editFacilityModal')).show();
    }
</script>