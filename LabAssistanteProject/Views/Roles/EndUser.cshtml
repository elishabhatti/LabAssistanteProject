@model LabAssistanteProject.Models.Requests

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Portal | LabAssistant</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <!-- Urbanist -->
    <link href="https://fonts.googleapis.com/css2?family=Urbanist:wght@400;500;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --primary: #2563eb;
            --primary-hover: #1d4ed8;
            --bg-main: #f8fafc;
            --border-color: #e2e8f0;
            --text-main: #1e293b;
            --text-muted: #64748b;
        }

        * {
            font-family: 'Urbanist', sans-serif;
        }

        body {
            color: var(--text-main);
        }

        /* Top Navigation */
        .secondary-nav {
            background: white;
            border-bottom: 1px solid var(--border-color);
            padding: 1rem 0;
        }

        .sec-nav-link {
            color: var(--text-muted);
            text-decoration: none;
            font-weight: 600;
            font-size: 0.9rem;
            padding: 0.5rem 1rem;
            border-radius: 10px;
            transition: 0.2s;
        }

            .sec-nav-link:hover {
                background: #f1f5f9;
                color: var(--primary);
            }

            .sec-nav-link.active {
                background: rgba(37, 99, 235, 0.1);
                color: var(--primary);
            }

        /* Card */
        .portal-card {
            background: white;
            border: 1px solid var(--border-color);
            border-radius: 16px;
            padding: 2.5rem;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
        }

        .form-label {
            font-weight: 600;
            color: var(--text-muted);
            font-size: 0.8rem;
        }

        .form-control,
        .form-select {
            border: 1px solid var(--border-color);
            padding: 0.75rem 1rem;
            border-radius: 10px;
            font-size: 0.9rem;
        }

            .form-control:focus,
            .form-select:focus {
                border-color: var(--primary);
                box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
            }

        .btn-primary {
            background-color: var(--primary);
            border: none;
            border-radius: 10px;
            font-weight: 600;
            padding: 0.75rem;
        }

            .btn-primary:hover {
                background-color: var(--primary-hover);
            }

        .info-box {
            background: #f8fafc;
            border: 1px solid var(--border-color);
            border-radius: 14px;
            padding: 1.25rem;
        }
    </style>
</head>
<body>

    <!-- Navigation -->
    <div class="secondary-nav">
        <div class="container d-flex gap-2 align-items-center justify-content-between">
            <div class="d-flex gap-2">
                <a class="sec-nav-link active" href="/Roles/EndUser">
                    <i class="bi bi-plus-square me-2"></i>New Request
                </a>
                <a class="sec-nav-link" href="/Home/Index">
                    <i class="bi bi-list-ul me-2"></i>My Requests
                </a>
                <a class="sec-nav-link" href="/Auth/ChangePassword">
                    <i class="bi bi-key me-2"></i>Security
                </a>
                <a class="sec-nav-link" href="/Pages/Help">
                    <i class="bi bi-question-circle me-2"></i>Help
                </a>
            </div>

            <form asp-controller="Auth" asp-action="Logout" method="post">
                <button class="btn btn-outline-danger btn-sm fw-bold">
                    <i class="bi bi-box-arrow-right me-1"></i> Logout
                </button>
            </form>
        </div>
    </div>

    <!-- Content -->
    <main class="container py-5">

        <div class="mb-4">
            <h2 class="fw-bold mb-1">Create Service Ticket</h2>
            <p class="text-muted small">
                Logged in as <b>@ViewBag.username</b> (ID: @ViewBag.userId)
            </p>
        </div>

        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert alert-success border-0 rounded-3 mb-4 shadow-sm py-2">
                <i class="bi bi-check2-circle me-2"></i> @ViewBag.Message
            </div>
        }

        <div class="row g-4">
            <!-- Form -->
            <div class="col-lg-8">
                <div class="portal-card">
                    <form asp-controller="Requests" asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Facility / Lab</label>
                                <select asp-for="FacilityId" class="form-select" required>
                                    <option value="">Select facility</option>
                                    @foreach (var facility in ViewBag.Facilities)
                                    {
                                        <option value="@facility.Id">@facility.Name</option>
                                    }
                                </select>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Priority</label>
                                <select asp-for="Severity" class="form-select" required>
                                    <option value="">Select priority</option>
                                    <option value="low">Low</option>
                                    <option value="medium">Medium</option>
                                    <option value="high">High</option>
                                    <option value="critical">Critical</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Issue Description</label>
                            <textarea asp-for="Description" class="form-control" rows="5"
                                      placeholder="Describe the issue in detail..."></textarea>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">
                            Submit Request
                        </button>
                    </form>
                </div>
            </div>

            <!-- Info -->
            <div class="col-lg-4">
                <div class="info-box mb-4">
                    <h6 class="fw-bold mb-2">
                        <i class="bi bi-lightning-charge text-primary me-2"></i>
                        What happens next?
                    </h6>
                    <p class="text-muted small mb-0">
                        Your request will be reviewed by the Facility Head and assigned to a technician.
                    </p>
                </div>

                <div class="info-box">
                    <h6 class="fw-bold mb-2">
                        <i class="bi bi-shield-check text-primary me-2"></i>
                        Guidelines
                    </h6>
                    <ul class="text-muted small ps-3 mb-0">
                        <li>Select correct lab</li>
                        <li>Mention equipment ID if possible</li>
                        <li>Be clear and concise</li>
                    </ul>
                </div>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

</body>
</html>
