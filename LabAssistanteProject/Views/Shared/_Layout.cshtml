<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LabAssist</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Urbanist:wght@400;500;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --primary: #2563eb;
            --primary-hover: #1d4ed8;
            --bg-main: #f8fafc; /* Light grey background for content contrast */
            --border-color: #e2e8f0;
            --text-main: #1e293b;
            --text-muted: #64748b;
        }

        * {
            font-family: 'Urbanist', sans-serif;
            box-sizing: border-box;
        }

        /* 1. Layout Fix: Ensure footer stays at the bottom */
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
            background-color: var(--bg-main);
            color: var(--text-main);
        }

        /* 2. Navbar Styling */
        .navbar {
            background-color: #ffffff;
            border-bottom: 1px solid var(--border-color);
            padding: 0.75rem 0;
            position: sticky;
            top: 0;
            z-index: 1020;
        }

        .navbar-brand {
            font-weight: 700;
            color: var(--primary) !important;
            display: flex;
            align-items: center;
        }

        .nav-link {
            font-weight: 500;
            color: var(--text-muted) !important;
            padding: 0.5rem 1rem !important;
            border-radius: 6px;
            transition: 0.2s;
        }

            .nav-link:hover {
                color: var(--primary) !important;
                background-color: rgba(37, 99, 235, 0.05);
            }

            .nav-link.active {
                color: var(--primary) !important;
                font-weight: 600;
            }

        /* 3. Main Content Wrapper */
        .main-container {
            flex: 1 0 auto;
            padding: 3rem 0;
        }

        /* 4. Footer Styling */
        .footer {
            flex-shrink: 0;
            background: #ffffff;
            border-top: 1px solid var(--border-color);
            padding: 1.5rem 0;
            color: var(--text-muted);
            font-size: 0.85rem;
        }

        /* Utilities */
        .btn-logout {
            color: #dc3545;
            font-weight: 600;
            border: 1px solid transparent;
        }

            .btn-logout:hover {
                background-color: #fff5f5;
                border-color: #feb2b2;
                color: #c53030;
            }
    </style>
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-shield-check me-2"></i> LabAssist
                </a>

                <button class="navbar-toggler border-0 shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto align-items-center">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "EndUser" ? "active" : "")"
                               href="/Roles/EndUser">
                                <i class="bi bi-plus-square me-1"></i> New Request
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")"
                               href="/">
                                <i class="bi bi-list-ul me-1"></i> Track Requests
                            </a>
                        </li>

                        <li class="nav-item ms-lg-3">
                            <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-logout px-3">
                                    <i class="bi bi-box-arrow-left me-1"></i> Sign Out
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div>
        <div>
            @RenderBody()
        </div>
    </div>

    <footer class="footer">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start">
                    <span>&copy; 2025 <strong>LabAssistanteProject</strong>. All rights reserved.</span>
                </div>
                <div class="col-md-6 text-center text-md-end mt-2 mt-md-0">
                    <a href="#" class="text-decoration-none text-muted me-3">Privacy Policy</a>
                    <a href="#" class="text-decoration-none text-muted">Support</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>